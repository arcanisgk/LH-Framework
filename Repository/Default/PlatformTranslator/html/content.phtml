<div class="container-fluid m-4 translate-container fs-14px">
    <div class="row">
        <div class="col-xxl-7 col-xl-8 col-lg-8 col-md-10 col-sm-12 col-12 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mt-2">{{platform-translator-title}}</h4>
                </div>
                <div class="card-body">
                    <form action="/Platform-Translator" method="post">
                        <div class="row mb-3">
                            <label class="form-label col-form-label col-md-3" for="dictionary-selector">{{label-key-selector}}</label>
                            <div class="col-md-7">
                                <select class="form-control" id="dictionary-selector" data-lh-pl="select" data-width="100%" name="event" data-lh-event="getDictionary" data-lh-var="workspace-selected">
                                    <option value="0">{{select-dictionary}}</option>
                                    {{dictionary-options}}
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-outline-info" name="event" value="refresh">
                                    <i class="fa-solid fa-arrows-rotate"></i></button>
                            </div>
                        </div>

                    </form>
                    <div class="row">
                        <div class="col-12">

                            <table width="100%" class="table table-striped table-bordered align-middle text-nowrap" id="translations-table" data-lh-pl="datatable" data-lh-pl-options="
                                    filename: {{platform-translator-title}},
                                    landscape: true,
                                    paging: true,
                                    ordering: true,
                                    info: true,
                                    searching: true,
                                    autoWidth: true,
                                    scrollContainer: true,
                                    scrollX: false,
                                    scrollY: false,
                                    leftColumns: false,
                                    rightColumns: false,
                                    dom: true,
                                    responsive: false,
                                    buttons: true,
                                    iDisplayLength: 10">
                                <thead>
                                <tr>
                                    <th data-column-name="row"></th>
                                    <th data-column-name="key">{{key-column}}</th>
                                    <th data-column-name="status">{{status}}</th>
                                    <th data-column-name="priority">{{priority}}</th>
                                    <th data-column-name="btn-translate">{{translate}}</th>
                                    <th data-column-name="btn-report">{{report}}</th>
                                </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

