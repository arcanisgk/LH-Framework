<div class="container m-4">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>Test Page</h2>
            <h3>Modal Area</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <button id="showModalBtn" class="btn btn-primary m-1">Show Existing Modal</button>
            <button id="hideModalBtn" class="btn btn-secondary m-1">Hide Modal</button>
            <button id="createModalBtn" class="btn btn-success m-1">Create Dynamic Modal</button>
            <button id="waitModalBtn" class="btn btn-info m-1">Show Wait Modal</button>
            <button id="errorModalBtn" class="btn btn-danger m-1">Show Error Modal</button>
            <button id="systemErrorBtn" class="btn btn-warning m-1">Show System Error</button>
            <button id="successModalBtn" class="btn btn-primary m-1">Show Success Modal</button>
            <button id="customModalBtn" class="btn btn-dark m-1">Show Custom Modal</button>
            <button id="sequentialModalBtn" class="btn btn-secondary m-1">Show Sequential Modals</button>
        </div>
    </div>

    <!-- Example of existing modal in HTML -->
    <div class="modal fade" id="exampleModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Existing Modal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>This is an existing modal in HTML</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>