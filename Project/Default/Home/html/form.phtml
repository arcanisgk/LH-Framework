<div id="list-modals">
    <div class="modal fade" id="searchConfig" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Search Parameters</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row mb-1">
                            <div class="col-12 col-sm-5  fw-bold">
                                <label for="list-order" class="col-form-label">Sort by:</label>
                            </div>
                            <div class="col-12 col-sm-5">
                                <select class="form-select shadow-none" aria-label="Select" id="list-order" name="list-order">
                                    <option value="1" selected>High to Low Price</option>
                                    <option value="2">Low to High Price</option>
                                    <option value="3">Most Recent</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-1">
                            <div class="col-12 col-sm-5  fw-bold">
                                <label for="list-show-store" class="col-form-label">Search in:</label>
                            </div>
                            <div class="col-12 col-sm-7">
                                <select class="form-select shadow-none" aria-label="Select" id="list-show-store" name="list-show-store">
                                    <option value="1">All stores</option>
                                    <option value="2" selected>Main Stores</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-1">
                            <div class="col-12 col-sm-5 fw-bold">
                                <label>Hide Out of Stock:</label>
                            </div>
                            <div class="col-12 col-sm-5">
                                <div class="form-check form-switch">
                                    <input class="form-check-input switch-lg shadow-none" type="checkbox" role="switch" id="list-stock" name="list-stock" aria-label="Hide Out of Stock" checked>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-1">
                            <div class="col-12 col-sm-12">
                                <label class="col-form-label fw-bold">Card condition:</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 offset-0 col-sm-7 offset-sm-5">
                                <div class="form-check form-switch">
                                    <input class="form-check-input switch-lg me-2 shadow-none" type="checkbox" role="switch" id="list-condition-1" name="list-condition-1">
                                    <label class="form-check-label" for="list-condition-1">Show All</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 offset-0 col-sm-7 offset-sm-5">
                                <div class="form-check form-switch">
                                    <input class="form-check-input switch-lg me-2 shadow-none" type="checkbox" role="switch" id="list-condition-2" name="list-condition-2">
                                    <label class="form-check-label" for="list-condition-2">Graded</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 offset-0 col-sm-7 offset-sm-5">
                                <div class="form-check form-switch">
                                    <input class="form-check-input switch-lg me-2 shadow-none" type="checkbox" role="switch" id="list-condition-3" name="list-condition-3" checked>
                                    <label class="form-check-label" for="list-condition-3">Near Mint (NM)</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 offset-0 col-sm-7 offset-sm-5">
                                <div class="form-check form-switch">
                                    <input class="form-check-input switch-lg me-2 shadow-none" type="checkbox" role="switch" id="list-condition-4" name="list-condition-4" checked>
                                    <label class="form-check-label" for="list-condition-4">Little Played (LP)</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 offset-0 col-sm-7 offset-sm-5">
                                <div class="form-check form-switch">
                                    <input class="form-check-input switch-lg me-2 shadow-none" type="checkbox" role="switch" id="list-condition-5" name="list-condition-5">
                                    <label class="form-check-label" for="list-condition-5">Moderate Played (MP)</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 offset-0 col-sm-7 offset-sm-5">
                                <div class="form-check form-switch">
                                    <input class="form-check-input switch-lg me-2 shadow-none" type="checkbox" role="switch" id="list-condition-6" name="list-condition-6">
                                    <label class="form-check-label" for="list-condition-6">Heavy Played (HP)</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 offset-0 col-sm-7 offset-sm-5">
                                <div class="form-check form-switch">
                                    <input class="form-check-input switch-lg me-2 shadow-none" type="checkbox" role="switch" id="list-condition-7" name="list-condition-7">
                                    <label class="form-check-label" for="list-condition-7">Damaged (D)</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 offset-0 col-sm-7 offset-sm-5">
                                <button type="button" class="btn btn-outline-warning text-muted disabled ">Advanced Search Engine</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save Options</button>
                </div>
            </div>
        </div>
    </div>
</div>